    ShortKey sk = { "*", key };
    storage_t::const_iterator it = keyvalueMap_.find(sk);
    if (it!=keyvalueMap_.end()) {
      for (auto & v : it->second) {
        std::istringstream iss(v.c_str(), std::istringstream::in);
        iss >> returnValue;
        returnArray[i++] = returnValue;
        if (i==N) break;
      }
    } else {
      issueKeyError(sk);
    }
    return returnArray;
  }

